<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myYellowMarvelcolor"
    tools:context=".view.CadastroActivity">

        <ImageView
            android:id="@+id/imagemFundoMarvel"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:alpha="0.2"
            app:srcCompat="@drawable/fundo_icones_marvel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imagemFundoMarvelSegunda"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:adjustViewBounds="false"
            android:alpha="0.2"
            app:srcCompat="@drawable/fundo_icones_marvel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagemFundoMarvel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/telaDeCadastro"
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:layout_marginTop="300dp"
            android:letterSpacing="0.3"
            android:background="@drawable/background_botton"
            android:text="TELA DE CADASTRO"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/primaryTextColor"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/myRedMarvelcolor"
            android:hint="Nome:"
            android:textSize="20sp"
            android:textColorHint="@color/myRedMarvelcolor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/telaDeCadastro" />

        <EditText
            android:id="@+id/editText_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/myRedMarvelcolor"
            android:hint="Email:"
            android:textColorHint="@color/myRedMarvelcolor"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextNome" />

        <EditText
            android:id="@+id/editText_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/myRedMarvelcolor"
            android:hint="Senha:"
            android:textColorHint="@color/myRedMarvelcolor"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_email"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/editTextConfirmaSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/myRedMarvelcolor"
            android:hint="Confirmar Senha:"
            android:textColorHint="@color/myRedMarvelcolor"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_senha" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancelar"
            android:layout_width="165dp"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background_botton"
            android:text="Cancelar"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/primaryTextColor"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/btn_cadastrar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextConfirmaSenha" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cadastrar"
            android:layout_width="165dp"
            android:layout_height="65dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background_botton"
            android:text="Cadastrar"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/primaryTextColor"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_cancelar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_cancelar" />

</androidx.constraintlayout.widget.ConstraintLayout>